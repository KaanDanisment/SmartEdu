<%- include('partials/_header') -%>

	
	<div class="all-title-box">
		<div class="container text-center">
			<h1>Course Single<span class="m_1">Lorem Ipsum dolroin gravida nibh vel velit.</span></h1>
		</div>
	</div>
	
    <div id="overviews" class="section wb">
        <div class="container"> 
            <div class="row"> 
                <div class="col-lg-12 blog-post-single">
                    <div class="blog-item">
						<div class="image-blog">
							<img src="/images/blog_single.jpg" alt="" class="img-fluid">
						</div>
						<div class="post-content">
							<% if(user && !user.courses.includes(course._id) && user.role === "student") { %>
							<div class="post-date">
								<form method="post" action="/courses/enroll">
									<input type="hidden" name="course_id" value="<%= course._id %>">
									<button class="btn btn-lg btn-warning text-white"><span>ENROLL</span></button>
								</form>
							</div>
							<% } %>
							<div class="meta-info-blog">
								<span><i class="fa fa-calendar"></i> <a href="#" style="cursor: default;" onclick='return false'>Course created at <%= course.createdAt.toLocaleDateString() %></a> </span>
							</div>
							<div class="blog-title">
								<h2><a href="#" title=""><%= course.name %></a></h2>
							</div>
							<div class="blog-desc">
								<p><%= course.description %></p>
							</div>							
						</div>
					</div>
					
					<div class="blog-author">
						<div class="author-bio">
							<h3 class="author_name"><a href="#"><%= course.user.name %></a></h3>
							<h5>Instructor at <a href="#">SmartEDU</a></h5>
							<p class="author_det">
								Lorem ipsum dolor sit amet, consectetur adip, sed do eiusmod tempor incididunt  ut aut reiciendise voluptat maiores alias consequaturs aut perferendis doloribus omnis saperet docendi nec, eos ea alii molestiae aliquand.
							</p>
						</div>
						<div class="author-desc">
							<img src="/images/author.jpg" alt="about author">
						</div>
					</div>
					
                </div><!-- end col -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->

    <%- include('partials/_footer') -%>


</body>
</html>